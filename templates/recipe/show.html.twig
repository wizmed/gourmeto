{% extends 'base.html.twig' %}

{% block title %}Recette {{ recette.title }}{% endblock %}

{% block body %}



<div class="container bg-white shadow-lg py-2">
        
        
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                <h1 class="text-dark fw-bold fs-4">{{ recette.title }} </h1><span class="badge bg-orange rounded-pill">Durée : {{ recette.duration }} minutes</span>
                </div>
                <!-- Affichage du contenu avec les sauts de ligne ajoutés -->
                <p>{{ recette.content|add_line_breaks|nl2br|raw }}</p>                
                <div class="d-flex justify-content-end mt-4">
                    
                    
                    <span class="badge bg-light border text-dark fw-normal">Mis à jour le : {{ recette.updatedAt|date('d/m/Y') }}</span>
                </div>
            </div>
        </div>

     
    </div>

{% endblock %}
