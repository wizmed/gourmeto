{% extends 'base.html.twig' %}

{% block title %}liste des recette_list{% endblock %}

{% block body %}



<div class="container bg-white shadow-lg py-2">
        
        
       
               
    <h1 class="text-dark fw-bold fs-4">Index des recettes</h1>

    

    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col" class="col-8 ">Nom de la recette</th>
            <th scope="col" class="col-2">
    <div class="d-flex">
        <span class="me-2">Dur√©e</span>
       
            <a href="{{ path('recette_list', {'order': 'ASC'}) }}" class="text-dark">
                <i class="bi bi-caret-up-fill"></i>
            </a>
            <a href="{{ path('recette_list', {'order': 'DESC'}) }}" class="text-dark">
                <i class="bi bi-caret-down-fill"></i>
            </a>
    </div>
</th>

            <th scope="col" class="text-center">Actions <i class="bi bi-pencil-fill"></i></th>
        </tr>
    </thead>
    <tbody>
        {% for recette in recette_list %}
            <tr>      
                <td scope="col-8" class="align-middle">            
                    <a href="{{ path('recette_show', {'slug': recette.slug}) }}" class="text-dark text-decoration-none">
                        {{ recette.title }}
                    </a>
                </td>
                <td scope="col-2" class="align-middle">           
                    {{ recette.duration }} min        
                </td>  
                <td scope="col-2" class="text-center align-middle">           
                    <button type="button" class="btn btn-primary btn-sm rounded-pill m-1">
                        <a href="{{ path('recette_edit', {'slug': recette.slug}) }}" class="text-light text-decoration-none">
                            Editer
                        </a>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm rounded-pill m-1">
                        <a href="{{ path('recette_delete', {'slug': recette.slug}) }}" class="text-light text-decoration-none">
                            Supprimer
                        </a>
                    </button>
                               
                </td>      
            </tr>
        {% endfor %} 
    </tbody>
    </table>
  
</div>

{% endblock %}
